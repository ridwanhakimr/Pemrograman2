@model IEnumerable<GudangWebApp.Models.Barang>

@{
    ViewData["Title"] = "Daftar Barang";
}

<h2>@ViewData["Title"]</h2>
<p>Ini adalah halaman dinamis yang menampilkan data dari Database SQLite.</p>

<a asp-action="Create" class="btn btn-primary mb-3">Tambah Barang</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Kode</th>
            <th>Nama Barang</th>
            <th>Stok</th>
            <th>Kategori</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.KodeBarang</td>
                <td>@item.NamaBarang</td>
                <td>@item.JumlahStok</td>
                <td>@item.Kategori</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Barang" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1">Edit</a>
                        <a asp-controller="Barang" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">Hapus</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>